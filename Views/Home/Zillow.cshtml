@model ApiPinger.ViewModels.ListingViewModel
@{
    ViewData["Title"] = "Zillow";
}

<div class="container">
    <form method="post">
        <span asp-validation-summary="ModelOnly"></span>
        @if (ViewBag.UserMessage != null)
        {
            <div class="text-muted">@ViewBag.UserMessage</div>
        }
        
        <div class="form-group row">
            <label class="col-sm-2" for="street-address">Address</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" id="street-address" asp-for="Address" placeholder="Address" />
                <span asp-validation-for="Address" class="text-muted"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2" for="city-state">City, State</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" id="city-state" asp-for="CityState" placeholder="City, State" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2" for="zipcode">Zipcode</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" id="zipcode" asp-for="Zipcode" placeholder="Zipcode" />
            </div>
        </div>
        <div class="form-group row">
            <input class="btn btn-primary" type="submit" value="Send" />
            <a asp-controller="Home" asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </form>
</div>
<div>
    <h2>Response</h2>
    <p>@ViewBag.MyString</p>
</div>