@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <form class="">
        <div class="form-group row">
            <label for="api-query" class="col-sm-2 col-form-label">API Query</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" id="api-query" placeholder="API Query" />
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <input class="btn btn-primary" type="submit" value="Send" />
            </div>
        </div>
    </form>

    <div class="row">
        @if (ViewBag.Response != null)
        {
            <h2>Response</h2>
            <p>@ViewBag.Response</p>
        }
    </div>
</div>
